<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) { %> 
      <form class="form-inline" method="POST" action="/logout">
        <div class="form-group mb-2">
          <div style="margin-right: 20px">Logged in with <%= username %></div>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </div>
        </form>
    <% } else { %>
        <form class="form-inline" method="POST" action="/login">
          <input
            class="form-control"
            type="text"
            placeholder="Add username here"
            name="username"
            style="margin-right: 20px"
          />
          <button type="submit" class="btn btn-outline-dark">Sign in</button>
        </form>
    <% } %>
  </nav>
</header>